<h2>{{#str}}myportfolios, mod_evokeportfolio{{/str}}</h2>

<div class="accordion" id="chapters">
    {{#chapters}}
        <div class="card mb-2">
            <div class="card-header" id="chapter-heading-{{id}}">
                <h2 class="mb-0">
                    <button class="accordion-button" type="button" data-toggle="collapse" data-target="#chapter-collapse-{{id}}" aria-expanded="false" aria-controls="chapter-collapse-{{id}}">
                        {{name}}
                    </button>
                </h2>
            </div>

            <div id="chapter-collapse-{{id}}" class="collapse" aria-labelledby="chapter-heading-{{id}}" data-parent="#chapters">
                <div class="card-body">
                    <div class="accordion" id="chapter-portfolios-{{id}}">
                        {{#portfolios}}
                            <div class="card mb-2">
                                <div class="card-header" id="portfolio-heading-{{portfolioid}}">
                                    <h2 class="mb-0">
                                        <button class="accordion-button" type="button" data-toggle="collapse" data-target="#portfolio-collapse-{{portfolioid}}" aria-expanded="false" aria-controls="portfolio-collapse-{{portfolioid}}">
                                            {{name}}
                                        </button>
                                    </h2>
                                </div>

                                <div id="portfolio-collapse-{{portfolioid}}" class="collapse" aria-labelledby="portfolio-heading-{{portfolioid}}" data-parent="#chapter-portfolios-{{chapterid}}">
                                    <div class="card-body">
                                        {{#sections}}
                                            {{#issinglesection}}
                                                    <div class="mb-3">
                                                        <a class="btn btn-primary" href="{{config.wwwroot}}/mod/evokeportfolio/view.php?id={{coursemoduleid}}">{{#str}}gototheportfolio, mod_evokeportfolio{{/str}}</a>
                                                    </div>
                                                {{> mod_evokeportfolio/submissions }}

                                                {{^hassubmission}}
                                                    <div class="alert alert-info" role="alert">
                                                        You have no submissions for this portfolio yet.
                                                    </div>
                                                {{/hassubmission}}
                                            {{/issinglesection}}
                                        {{/sections}}
                                    </div>
                                </div>
                            </div>
                        {{/portfolios}}
                    </div>
                </div>
            </div>
        </div>
    {{/chapters}}
</div>
