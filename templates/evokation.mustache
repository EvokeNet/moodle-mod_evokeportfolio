<div class="card-columns">
    {{#evokations}}
        <div class="card shadow-none border">
            <div class="card-body">
                <h5 class="card-title">{{{name}}}</h5>
                <p class="card-text">{{{intro}}}</p>
                {{#lastupdated}}
                    <p class="card-text text-right mb-0"><small class="text-muted">{{#str}}lastupdated, mod_evokeportfolio, {{{.}}}{{/str}}</small></p>
                {{/lastupdated}}
                <p class="card-text text-right mb-0"><small class="text-muted">{{#str}}totalsubmissions, mod_evokeportfolio, {{{totalsubmissions}}}{{/str}}</small></p>
            </div>
            <div class="card-footer bg-white text-right">
                <a class="btn btn-outline-primary" href="{{config.wwwroot}}/mod/evokeportfolio/view.php?portfolioid={{{id}}}">{{#str}}viewevokation, mod_evokeportfolio{{/str}}</a>
            </div>
        </div>
    {{/evokations}}
</div>
