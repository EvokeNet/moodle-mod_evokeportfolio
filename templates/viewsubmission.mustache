<h2>{{{name}}}</h2>

<div id="intro" class="box py-3 generalbox boxaligncenter">{{{intro}}}</div>

<div class="submissionheader row">
    <div class="col-md-9">
        <h3>{{#str}}user{{/str}}: {{targetuserfullname}}</h3>
        {{#usergroup}}
            <h4>{{#str}}group{{/str}}: {{usergroup}}</h4>
        {{/usergroup}}
    </div>
    <div class="col-md-3 text-right">
        <img src="{{targetuserpicture}}" alt="{{targetuserfullname}}" class="img-responsive userpicture">
    </div>
</div>

{{#submissions}}
    <div id="submissions" class="submissions mt-2" data-courseid="{{{courseid}}}">
        {{> mod_evokeportfolio/submission }}
    </div>
{{/submissions}}

{{#js}}
    require([
        'mod_evokeportfolio/addcomment',
        'mod_evokeportfolio/tribute_init',
        'mod_evokeportfolio/togglelike'
        {{#cangrade}}{{#isevaluated}}, 'mod_evokeportfolio/addgradeviewpage'{{/isevaluated}}{{/cangrade}}
    ], function(AddComment, TributeInit, ToggleLike {{#cangrade}}{{#isevaluated}},AddGradeViewPage{{/isevaluated}}{{/cangrade}}) {
        AddComment.init();

        TributeInit.init();

        ToggleLike.init();

        {{#cangrade}}
            {{#isevaluated}}
                AddGradeViewPage.init({{contextid}});
            {{/isevaluated}}
        {{/cangrade}}
    });
{{/js}}
