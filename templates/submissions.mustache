<h2>{{{name}}}</h2>

<div id="intro" class="box py-3 generalbox boxaligncenter">{{{intro}}}</div>

<div class="submissionssummary">
    {{#groupactivity}}
        <h3>{{#str}}groupactivity, mod_evokeportfolio{{/str}}</h3>
        {{#hasgroup}}
            <hr>
            <h5>{{#str}}group{{/str}}: {{groupname}}</h5>
            <p>
                <b>{{#str}}groupmembers{{/str}}</b>:
                {{#groupmembers}}
                    <div class="groupmember">
                        <img src="{{userpicture}}" alt="{{fullname}}"> {{fullname}}
                    </div>
                {{/groupmembers}}
            </p>
        {{/hasgroup}}
    {{/groupactivity}}
    {{^groupactivity}}
        <h3>{{#str}}individualctivity, mod_evokeportfolio{{/str}}</h3>
    {{/groupactivity}}
</div>

<div class="mb-3 text-center">
    {{^isdelayed}}
        <a class="btn btn-primary" href="{{config.wwwroot}}/mod/evokeportfolio/submit.php?id={{cmid}}">{{#str}}page_view_addsubmission, mod_evokeportfolio{{/str}}</a>
    {{/isdelayed}}
</div>

<div class="submissions">
    {{#submissions}}
        <div class="jumbotron p-2 mb-2 {{#isteacher}}isteacher{{/isteacher}}">
            <div class="header">
                <div class="userinfo">
                    <img src="{{userpicture}}" alt="{{fullname}}" class="img-rounded img-24 img-bordered"> <h3>{{fullname}}</h3>
                </div>
                {{#isowner}}
                <div class="actions">
                    <a class="btn btn-primary btn-sm" href="{{config.wwwroot}}/mod/evokeportfolio/submit.php?id={{cmid}}&submissionid={{id}}">
                        <i class="fa fa-pencil"></i> {{#str}}page_view_editsubmission, mod_evokeportfolio{{/str}}
                    </a>
                </div>
                {{/isowner}}
            </div>

            <h4 class="mb-0">{{#str}}page_submissions_portfoliotext, mod_evokeportfolio{{/str}}</h4>
            {{#comment}}
                <div class="border-white">
                    {{{.}}}
                </div>
            {{/comment}}

            {{#hasattachments}}
                <h4 class="mb-0 mt-2">{{#str}}page_submissions_portfolioattachment, mod_evokeportfolio{{/str}}</h4>

                {{#attachments}}
                    <div class="border-white row mx-0">
                        {{#isimage}}
                            <img src="{{fileurl}}" class="img-responsive" alt="{{filename}}">
                        {{/isimage}}
                        {{^isimage}}
                            <div class="col-6 mx-0">
                                <i class="fa fa-file-pdf-o"></i> {{filename}}
                            </div>
                            <div class="col-6 mx-0 text-right">
                                <a href="{{fileurl}}" class="btn btn-secondary btn-sm">{{#str}}downloadfile, mod_evokeportfolio{{/str}}</a>
                            </div>
                        {{/isimage}}
                    </div>
                {{/attachments}}
            {{/hasattachments}}
        </div>
    {{/submissions}}
</div>
